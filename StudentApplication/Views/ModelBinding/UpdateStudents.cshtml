@model List<StudentViewModel>

@if (Model!=null && Model.Any())
{
   <form method="post" asp-controller="ModelBinding" asp-action="AddStudents">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Gender</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            <input asp-for="@Model[i].Id" />
                        </td>
                        <td>
                            <input asp-for="@Model[i].Name" />
                        </td>
                        <td>
                            <input asp-for="@Model[i].Age" />
                        </td>
                        <td>
                            <input asp-for="@Model[i].Gender" />
                        </td>
                    </tr>
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <button type="submit">Submit</button>
                    </td>
                </tr>
            </tbody>
        </table>
        
   </form>
}
else
{
    <h3>No record found</h3>    
}